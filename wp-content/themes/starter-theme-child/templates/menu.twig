{% if menu %}
	<ul>

		{% for item in items %}
			<li class="{{ item.classes | join(' ') }}">
				<a target="{{ item.target }}" href="{{ item.link }}">
					<span>{{ item.title }}</span>
				</a>
				{% include "menu.twig" with {'items': item.children} %}
			</li>
		{% endfor %}

	</ul>
{% endif %}
