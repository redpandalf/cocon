<div class="row">
  <a href="{{ site.url }}" title="{{ site.name }}">
    <img src="https://cocon.alexiasavva.fr/wp-content/uploads/logo-cocon-blanc.png" alt="{{ site.name }}" width="100" />
  </a>

  <div>
    {% for item in footer_menu.items %}
        <li class="nav-main-item {{ item.classes|join(' ') }}">
            <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
            {% if item.children %}
                <ul class="nav-drop">
                    {% for child in item.children %}
                        <li class="nav-drop-item">
                            <a href="{{ child.link }}">{{ child.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
    <p>Cocon {{"now"|date('Y')}} | tous droits réservés</p>
  </div>
  
</div>

